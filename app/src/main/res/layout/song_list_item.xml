<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            app:cardCornerRadius="7dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/muse"
                    android:layout_margin="6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <LinearLayout
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_image"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="I know what you did last summer"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:alpha="0.87"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                <TextView
                        android:id="@+id/item_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_title"
                        android:layout_toRightOf="@+id/item_image"
                        android:layout_marginLeft="9dp"
                        android:text="Muse"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:alpha="0.65"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/item_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_artist"
                        android:layout_toRightOf="@+id/item_image"
                        android:layout_marginLeft="9dp"
                        android:text="Black holes and revelations"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:alpha="0.38"
                        android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textColor="#000000"
                    android:alpha="0.38"
                    android:textSize="15sp"
                    android:text="2h"
                    android:layout_alignTop="@+id/item_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            <ImageView
                    android:id="@+id/item_no_chords"
                    android:visibility="invisible"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/no_chords"
                    android:alpha="0.20"
                    android:layout_alignBottom="@id/item_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            <ImageView
                    android:id="@+id/item_favorite"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ic_favorite_black_24dp"
                    android:alpha="0.20"
                    android:layout_alignBottom="@id/item_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>